<% layout("/layouts/boilerplate")-%>

<body>
    <br><br>
    <div class="row">
        <div class="col-md-8 col-sm-12 offset-sm-2 responsive-form" >
            <form action="/signIn" method="POST" novalidate  class="row g-3 needs-validation">
                <h3>Sign in to WonderLust</h3>

                <div class=" col-sm-12">
                    <label for="title" class="form-label">Email</label>
                    <input name="email" type="text" class="form-control" id="title" required>
                    <div class="invalid-feedback">
                        Please provide valid email.
                      </div>
                      <div class="valid-feedback">
                        Looks Good.
                      </div>
                </div>

                <div class=" col-sm-12">
                    <label for="title" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" id="title" required>
                    <div class="invalid-feedback">
                        Please provide valid username.
                      </div>
                      <div class="valid-feedback">
                        Looks Good.
                      </div>
                </div>

                <div class="col-sm-12">
                    <label for="title" class="form-label">Password</label>
                    <input name="password" type="text" class="form-control" id="password" required>
                    <div class="invalid-feedback">
                        Please provide valid username.
                      </div>
                      <div class="valid-feedback">
                        Looks Good.
                      </div>
                </div>

                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>
</body>